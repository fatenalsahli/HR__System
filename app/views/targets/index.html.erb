        <td><%=targets.status%></td>
        <td><%=targets.team_id%></td>
        <td> </td>
        <td> </td>
        <td> </td>
  
        <td>  <%= link_to "Show target", (targets) %></td>
         <td><%= link_to 'new', new_target_path(targets)%></td>
        <td><%= link_to 'Edit', edit_target_path(targets)%></td>
        <td><%= link_to 'Destroy', targets, :confirm => 'Are you sure?', :method => :delete %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
 
 <a href="/" class="mt-5">&#8592; Back to Home</a>
    <%= link_to 'new', new_target_path(@targets)%>

</div>
