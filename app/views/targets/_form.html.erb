<%= form_with(model: target) do |form| %>
  <% if target.errors.any? %>
    <div style="color: red">
       <h2> <%= t 'globals.forms.messages.errors.multiple errors', count: target.errors.count %> </h2>

      <ul>
        <% target.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_field :description %>
  </div>

  <div>
    <%= form.label :start_date, style: "display: block" %>
    <%= form.datetime_field :start_date %>
  </div>

  <div>
    <%= form.label :finish_date, style: "display: block" %>
    <%= form.datetime_field :finish_date %>
  </div>

  <div>
    <%= form.label :status, style: "display: block" %>
    <%= form.text_field :status %>
  </div>

<div class="field form-group mb-3" class="form-control">
 <%= form.label :team_id, style: "display: block" %>
  <%= form.select :team_id,Team.all.pluck(:name,:id),{prompt:'Team'},{class: "form-control"}%>
  </div>

    <%= form.submit class:"btn btn-dark" %>
  </div>
<% end %>
